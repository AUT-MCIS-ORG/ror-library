	 			tableRecord.appendTo($("#searchRecordLand"));
	 			for (var i = data.count - 1; i >= 0; i--) {
	 				var tr = $("<tr></tr>");
	 				tr.appendTo(tableRecord);

	 				for (var j = 2 - 1; j >= 0; j--) {
	 					if (j === 1) {

